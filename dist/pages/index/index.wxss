.doc-header {
  padding: 50rpx;
  background-color: #F8F8F8;
  color: #333;
  font-size: 60rpx;
  font-weight: bold;
}

.doc-body .panel {
  margin: 32rpx 0 56rpx;
}

.doc-body .panel__title {
  position: relative;
  margin-bottom: 50rpx;
  padding-left: 50rpx;
  color: #6a6a77;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.5;
}

.doc-body .panel__title::before {
  content: "";
  display: inline-block;
  position: absolute;
  left: 24rpx;
  top: 50%;
  margin-top: -20rpx;
  width: 2rpx;
  height: 40rpx;
  background-color: #6190e8;
  -webkit-box-shadow: 0 7rpx 12rpx 0 rgba(97, 144, 232, 0.2);
          box-shadow: 0 7rpx 12rpx 0 rgba(97, 144, 232, 0.2);
  border-radius: 1rpx;
}

.doc-body .panel__content {
  padding: 0 20rpx;
}

.complete {
  text-decoration: line-through;
}

